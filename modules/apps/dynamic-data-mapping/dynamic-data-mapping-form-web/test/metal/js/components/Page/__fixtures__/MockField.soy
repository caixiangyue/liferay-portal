{namespace MockField}

{template .render}
	{@param? type: string}

	{switch $type}
		{case 'date'}
			{call .Date /}
		{case 'text'}
			{call .Text /}
		{case 'select'}
			{call .Select /}
		{case 'radio'}
			{call .Radio /}
		{default}
			<div class="ddm-template-undefined">Undefined template.</div>
	{/switch}
{/template}

{template .Date}
	<p>Date Field</p>
{/template}

{template .Text}
	<p>Text Field</p>
{/template}

{template .Radio}
	<p>Radio Field</p>
{/template}

{template .Select}
	<p>Select Field</p>
{/template}